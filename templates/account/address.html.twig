{% extends 'base.html.twig' %}

{% block title %}Mes address
{% endblock %}

{% block body %}


	<a href="{{path('app_account_address_add')}}" class="btn btn-info btn-sm float-end">
		Ajouter une adresse
	</a>
	<h1>
		Mes adresses
	</h1>
	Espace gestion des adresses
	<br/>

	<a href="{{path('app_account')}}">
		Retour
	</a>
	<hr>
	{% if app.user.addresses| length == 0 %}

		<p class="text-center">
			vous n'avez pas encore ajoutÃ© d'adresse dans votre compte. pour ajouter , veuiilez
			<a href="{{path('app_account_address_add')}}">
				Cliquer ici
			</a>
		</P>

	{% else %}

		<div class="row">
			{% for address in app.user.addresses %}
				{% if address.isDeleted == false  %}
					<div class="col-md-4">
						<div class="card">
							<div class="card-body">
								<h5 class="card-title">{{address.name}}<h5>
										<p class="card-text">
											{{address.address}}
											<br>
											{{address.codePostal}}
											-
											{{address.city}}
											-
											{{address.country}}
										</p>
										<a href="{{path('app_account_address_update',{id:address.id})}}">Modifir</a>
										|
										<a href="{{path('app_account_address_delete',{id:address.id})}}">Supprimer</a>
									</div>
								</div>
							</div>
						{% endif %}
					{% endfor %}
				</div>
			</div>

		{% endif %}

	{% endblock %}
