{% extends 'base.html.twig' %}

{% block title %}Nos Produits{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-3">
        <h4 class="mt-4">Chercher vos produits</h4>
        {{ form(form) }}
    </div>
    <div class="col-md-9">
        <h1 class="mt-4">Nos produits</h1>
        <div class="row">
            {% for product in products %}
                <div class="col-md-4">
                    <div class="text-center product-item">
                        <a href="{{ path('app_product_item', {'slug': product.slug}) }}">
                            <img src="/upload/{{ product.imageProduct }}" alt="{{ product.name }}" class="img-fluid product-image">
                        </a>
                        <h5>{{ product.name }}</h5>
                        <span class="product-subtitle">{{ product.subtitle }}</span>
                        <span class="product-subtitle">{{ (product.price / 100) | number_format(2, '.', ',') }} â‚¬</span>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
